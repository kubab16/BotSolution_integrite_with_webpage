@{
    ViewData["Title"] = "Logowanie";
}

<h1>Logowanie</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <section>
            <form id="account" method="post" asp-controller="Identify" asp-action="login" asp-route-returnUrl="@ViewData["ReturnUrl"]">
                <div class="text-danger">
                    @TempData["ErrorLogin"]
                </div>
                <div class="form-group">
                    <label for="Input_Email">Email</label>
                    <input class="form-control" type="email" data-val="true" data-val-email="Nie prwawidłowy email." data-val-required="Adres email jest wymagany." id="Input_Email" name="mail" value="@TempData["mail"]" />
                    <span class="text-danger field-validation-valid" data-valmsg-for="mail" data-valmsg-replace="true"></span>
                </div>
                <div class="form-group">
                    <label for="Input_Password">Hasło</label>
                    <input class="form-control" type="password" data-val="true" data-val-required="Hasło jest wymagane." id="Input_Password" name="Password" />
                    <span class="text-danger field-validation-valid" data-valmsg-for="Password" data-valmsg-replace="true"></span>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label for="Input_RememberMe">
                            <input type="checkbox" data-val="false" id="Input_RememberMe" name="RememberMe" value="true" />
                            Zapamiętaj mnie
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <button id="login-submit" type="submit" class="btn btn-primary">Log in</button>
                </div>
                <div class="form-group">
                    <p>
                        <a id="forgot-password" asp-controller="" asp-action="" asp-route-returnUrl="@Context.Request.Path">Forgot your password?</a>
                    </p>
                    <p>
                        <a asp-controller="Identify" asp-action="Register" asp-route-returnUrl="@ViewData["ReturnUrl"]">Register as a new user</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
    <div class="col-md-6 col-md-offset-2">
        <section>
            <!--Facebook-->
            Facebook
        </section>
        <section>
            <!--Google-->
            Google
        </section>
        <section>
            <!--Discord-->
            Discord
        </section>
    </div>
</div>
@section Scripts
{
    <script src="/Identity/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="/Identity/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
}